# Django Configuration
DJANGO_SETTINGS_MODULE=config.settings.production
DEBUG=False
SECRET_KEY=your-production-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://user:password@db:5432/smarthr360

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Security Settings
ALLOWED_HOSTS=api.smarthr360.com,app.smarthr360.com
CORS_ALLOWED_ORIGINS=https://app.smarthr360.com
CSRF_TRUSTED_ORIGINS=https://api.smarthr360.com,https://app.smarthr360.com

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=1440

# Email Configuration (if needed)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow:5500
MLFLOW_EXPERIMENT_NAME=production

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_PUSHGATEWAY_URL=http://prometheus-pushgateway:9091

# File Storage (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_STORAGE_BUCKET_NAME=smarthr360-production
AWS_S3_REGION_NAME=us-east-1

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_STORAGE_URL=redis://redis:6379/1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Checks
HEALTH_CHECK_DISK_USAGE_MAX=90
HEALTH_CHECK_MEMORY_MIN=100
